#!/usr/bin/env bash

TMUX_SESSIONS=$(sesh list -t)

if [ "$TMUX" = "" ]; then          # not inside tmux
  if [ -z "$TMUX_SESSIONS" ]; then # no sessions exist
    sesh connect \
      "$(sesh list -z | fzf --no-sort --ansi --border-label ' sesh ' --prompt 'âš¡ ' \
        --header 'ctrl-a: All / ctrl-x: zoxide / ctrl-d: tmux kill' \
        --bind 'tab:down,btab:up' \
        --bind 'ctrl-x:change-prompt(ğŸ“  )+reload(sesh list -z)' \
        --bind 'ctrl-d:execute(tmux kill-session -t {})+change-prompt(âš¡  )+reload(sesh list)' \
        --bind 'ctrl-a:change-prompt(âš¡  )+reload(sesh list)')"
  else
    sesh connect \
      "$(sesh list -t | fzf --no-sort --ansi --border-label ' sesh ' --prompt 'âš¡ ' \
        --header 'ctrl-a: All / ctrl-t: Sessions / ctrl-x: zoxide / ctrl-d: tmux kill' \
        --bind 'tab:down,btab:up' \
        --bind 'ctrl-x:change-prompt(ğŸ“  )+reload(sesh list -z)' \
        --bind 'ctrl-t:change-prompt(ğŸªŸ  )+reload(sesh list -t)' \
        --bind 'ctrl-d:execute(tmux kill-session -t {})+change-prompt(âš¡  )+reload(sesh list)' \
        --bind 'ctrl-a:change-prompt(âš¡  )+reload(sesh list)')"
  fi
else # inside tmux
  sesh connect \
    "$(sesh list -t | fzf-tmux -p 55%,60% \
      --no-sort --ansi --border-label ' sesh ' --prompt 'âš¡ ' \
      --header 'ctrl-a: All / ctrl-t: Sessions / ctrl-x: zoxide / ctrl-d: tmux kill' \
      --bind 'tab:down,btab:up' \
      --bind 'ctrl-x:change-prompt(ğŸ“  )+reload(sesh list -z)' \
      --bind 'ctrl-t:change-prompt(ğŸªŸ  )+reload(sesh list -t)' \
      --bind 'ctrl-d:execute(tmux kill-session -t {})+change-prompt(âš¡  )+reload(sesh list)' \
      --bind 'ctrl-a:change-prompt(âš¡  )+reload(sesh list)')"
fi
